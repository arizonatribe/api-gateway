{
  "name": "auth-provider",
  "version": "1.0.0",
  "description": "A simple auth provider that follows the OAuth2 spec",
  "main": "src/server.js",
  "scripts": {
    "docs": "jsdoc --configure jsdoc.json && jsdoc-md-standard -s src/*.js",
    "docs:server": "live-server --open=docs/$npm_package_name/$npm_package_version --watch=src,docs --port=6000",
    "prestart:docs": "npm run docs",
    "prod": "cross-env NODE_ENV=production node ./src/server.js",
    "start": "nodemon src/server.js --config nodemonConfig.development.json",
    "lint": "eslint src test",
    "lint:watch": "npm-watch lint",
    "test": "tape test/index.js | faucet",
    "test:watch": "nodemon test/index.js --config nodemonConfig.test.json",
    "test:coverage": "nyc tape test/index.js | tap-nyc"
  },
  "keywords": [
    "auth",
    "oauth",
    "authentication",
    "authorization",
    "javscript"
  ],
  "author": "David Nunez <arizonatribe@gmail.com>",
  "license": "UNLICENSED",
  "homepage": "https://github.com/arizonatribe/api-gateway#readme",
  "dependencies": {
    "atob": "2.1.0",
    "body-parser": "^1.19.0",
    "btoa": "1.1.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "envalid": "^5.0.0",
    "express": "^4.17.3",
    "express-jwt": "3.4.0",
    "express-pino-logger": "^4.0.0",
    "helmet": "^3.20.0",
    "jade": "1.11.0",
    "jsonwebtoken": "7.0.0",
    "mongoose": "5.7.5",
    "passport": "0.3.2",
    "passport-local": "1.0.0",
    "pino": "^5.13.2",
    "querystring": "0.2.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "better-docs": "^1.1.6",
    "concurrently": "^4.1.1",
    "cross-env": "^5.2.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-graphql": "^3.0.3",
    "eslint-plugin-import": "^2.18.0",
    "faucet": "0.0.1",
    "jsdoc": "^3.6.2",
    "jsdoc-md-standard": "^1.0.5",
    "jsome": "^2.5.0",
    "live-server": "^1.2.1",
    "nodemon": "^1.19.1",
    "npm-watch": "^0.6.0",
    "nyc": "^14.1.1",
    "pino-pretty": "^3.2.0",
    "proxyquire": "^2.1.3",
    "sinon": "^7.4.1",
    "supertest": "^4.0.2",
    "tap-nyc": "^1.0.3",
    "tape": "^4.11.0"
  },
  "watch": {
    "docs": "{src}/*.js",
    "lint": "{src,test}/*.js"
  }
}
